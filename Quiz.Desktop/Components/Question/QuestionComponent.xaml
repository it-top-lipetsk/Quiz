<UserControl x:Class="Quiz.Desktop.Components.Question.QuestionComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Quiz.Desktop.Components.Question"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <ResourceDictionary Source="QuestionComponentStyle.xaml"/>
    </UserControl.Resources>
    
    <StackPanel>
        <Label x:Name="LabelQuestion"/>
        
        <StackPanel x:Name="AnswersPanel" />
        
        <Button x:Name="ButtonSave"
                Content="Ответить"/>
    </StackPanel>
</UserControl>
